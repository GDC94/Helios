generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Snapshot {
  id          String   @id @default(cuid())
  pairAddress String
  timestamp   DateTime
  liquidity   Float      // reserveUSD
  volume      Float      // dailyVolumeUSD
  fees        Float      // volume * 0.003
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([pairAddress, timestamp])
}
